<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/roomType"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="TextView"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="320dp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="1dp" />

            <TextView
                android:id="@+id/romName"
                android:layout_width="324dp"
                android:layout_height="29dp"
                android:text="TextView"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="59dp"
                tools:layout_editor_absoluteY="33dp" />

            <TextView
                android:id="@+id/guestName"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="TextView"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="318dp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/roomRate"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="TextView"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="318dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="91dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="TextView"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="318dp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="116dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="28dp"

                android:layout_gravity="center"
                app:srcCompat="@drawable/pe"
                tools:layout_editor_absoluteX="370dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="353dp"
                tools:layout_editor_absoluteY="69dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="TextView"
                tools:layout_editor_absoluteX="353dp"
                tools:layout_editor_absoluteY="50dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="TextView"
                tools:layout_editor_absoluteX="353dp"
                tools:layout_editor_absoluteY="50dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="66dp"
                android:layout_height="19dp"

                android:text="TextView"
                tools:layout_editor_absoluteX="353dp"
                tools:layout_editor_absoluteY="29dp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>