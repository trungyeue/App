                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="59dp"
                        android:layout_height="71dp"
                        android:gravity="center"
                        android:text="Logout"
                        android:textStyle="bold" />

                    <TextView
